@page "/"
@using Volo.Abp.MultiTenancy
@inherits GreenhouseComponentBase
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager NavigationManager
@attribute [Authorize]

<div class="container">
    <div class="p-5 text-center">
        <Badge class="mb-4">
            <h5 class="m-1"> <i class="fas fa-rocket"></i> Welcome to <strong>IoT Greenhouse</strong> !</h5>
        </Badge>

        <h1>Welcome to the Application</h1>

        <p class="lead px-lg-5 mx-lg-5">@L["LongWelcomeMessage"]</p>

        @if (!CurrentUser.IsAuthenticated)
        {
            <a class="btn btn-primary" href="Account/Login"><i class="fa fa-sign-in"></i> @L["Login"]</a>
        }
        else
        {
            <a class="btn btn-primary" href="/Dashboard">@L["GoToDashboard"]</a>
        }
    </div>
</div>
